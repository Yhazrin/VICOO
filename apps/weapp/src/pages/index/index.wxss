/* pages/index/index.wxss */
.header {
  padding: 32rpx 16rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin: 24rpx 0;
}

.stat-card {
  text-align: center;
  padding: 24rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--ink);
}

.stat-label {
  font-size: 22rpx;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
}

.actions {
  margin: 24rpx 0;
}

.actions .icon {
  margin-right: 8rpx;
}

.section-title {
  margin-top: 32rpx;
}

.loading, .empty-state {
  text-align: center;
  padding: 48rpx;
  color: #999;
}

.note-card {
  margin: 16rpx 0;
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.note-date {
  font-size: 20rpx;
  color: #999;
}

.note-title {
  margin-bottom: 8rpx;
}

.note-snippet {
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.note-tags {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.note-tags .tag {
  font-size: 20rpx;
  color: var(--info);
}

.version {
  text-align: center;
  padding: 24rpx;
  color: #ccc;
}
