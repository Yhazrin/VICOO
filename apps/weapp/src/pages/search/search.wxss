/* pages/search/search.wxss */
.search-section {
  padding: 16rpx 0;
}

.search-box {
  position: relative;
}

.clear-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #999;
  padding: 8rpx;
}

.loading, .empty-state {
  text-align: center;
  padding: 64rpx;
  color: #999;
}

.results-count {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-card {
  margin: 0;
  margin-bottom: 16rpx;
}

.result-title {
  margin: 12rpx 0 8rpx;
}

.result-snippet {
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recent-section {
  padding: 24rpx 0;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.recent-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: var(--white);
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.recent-icon {
  font-size: 24rpx;
}
