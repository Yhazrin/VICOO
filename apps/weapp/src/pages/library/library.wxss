/* pages/library/library.wxss */
.header {
  padding: 16rpx 0;
}

.search-box {
  margin-bottom: 16rpx;
}

.filter-bar {
  margin-bottom: 24rpx;
}

.filter-scroll {
  width: 100%;
}

.filter-list {
  display: flex;
  gap: 12rpx;
  padding: 8rpx 0;
}

.filter-item {
  padding: 12rpx 24rpx;
  border: 2rpx solid var(--ink);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  background: var(--white);
  white-space: nowrap;
}

.filter-item.active {
  background: var(--ink);
  color: var(--white);
}

.loading, .empty-state {
  text-align: center;
  padding: 64rpx;
  color: #999;
}

.notes-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.note-card {
  position: relative;
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.draft-badge {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 4rpx;
}

.note-title {
  margin-bottom: 8rpx;
}

.note-snippet {
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.note-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 12rpx;
  margin-top: 12rpx;
}

.note-date {
  font-size: 20rpx;
  color: #999;
}

.note-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 8rpx;
}

/* FAB */
.fab {
  position: fixed;
  bottom: 48rpx;
  right: 32rpx;
  width: 96rpx;
  height: 96rpx;
  background: var(--primary);
  border: 3rpx solid var(--ink);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 4rpx 4rpx 0rpx 0rpx var(--ink);
}

.fab:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0rpx 0rpx var(--ink);
}

.fab-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: var(--ink);
}
