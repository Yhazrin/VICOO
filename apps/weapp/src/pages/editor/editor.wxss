/* pages/editor/editor.wxss */
.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
}

.back-btn {
  font-size: 28rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.label {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.title-input {
  width: 100%;
  font-size: 40rpx;
  font-weight: 700;
  padding: 16rpx;
  border: 3rpx solid var(--ink);
  border-radius: 12rpx;
  background: var(--white);
}

.category-list {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.category-item {
  padding: 12rpx 20rpx;
  border: 2rpx solid var(--ink);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  background: var(--white);
}

.category-item.active {
  background: var(--ink);
  color: var(--white);
}

.content-input {
  width: 100%;
  min-height: 300rpx;
  padding: 16rpx;
  border: 3rpx solid var(--ink);
  border-radius: 12rpx;
  background: var(--white);
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: var(--info);
  color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.tag-remove {
  font-size: 28rpx;
  opacity: 0.7;
}

.tag-add {
  padding: 8rpx 16rpx;
  border: 2rpx dashed #999;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.publish-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: var(--white);
  border: 3rpx solid var(--ink);
  border-radius: 12rpx;
}

.toggle {
  width: 80rpx;
  height: 40rpx;
  background: #ccc;
  border-radius: 20rpx;
  position: relative;
  transition: background 0.3s;
}

.toggle.active {
  background: var(--secondary);
}

.toggle-thumb {
  width: 32rpx;
  height: 32rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: left 0.3s;
}

.toggle.active .toggle-thumb {
  left: 44rpx;
}

.delete-section {
  padding: 32rpx 0;
}
